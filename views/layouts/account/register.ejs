<!-- The Content Heading, descrides the content of the view -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% }else{ res.redirect('/') } %>

        <!-- A Message Block, used to display messages in a view -->
        <%- messages() %>

        <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
        <% } %>

            <!-- Login form Display, display the content -->
            <form id="registerForm" action="/account/register" method="post">
                <label for="fname">First Name:</label>
                <input type="text" id="fname" name="account_firstname" required value="<%= locals.account_firstname %>">
                
                <label for="lname">Last Name:</label>
                <input type="text" id="lname" name="account_lastname" required value="<%= locals.account_lastname %>">

                <label for="email">Email:</label>
                <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>">

                <label for="password">Password:</label>
                <div id="requirements">
                    <p>*Password must have at least 12 characters, at least 1 uppercase character, 1 number and one special character.*</p>
                </div>
                <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>


                <button type="submit">Register</button>
            </form>